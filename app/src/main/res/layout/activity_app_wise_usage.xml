<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".AppWiseUsageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:title="App-Wise Usage"
        app:titleTextColor="#333333"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search Bar -->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_search_bar"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:hint="Search apps..."
            android:paddingHorizontal="16dp"
            android:textColorHint="#999"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <!-- Toggle Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_toggle_container"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tab_today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Today"
                android:gravity="center"
                android:textColor="#666"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tab_this_week"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="This Week"
                android:gravity="center"
                android:background="@drawable/bg_toggle_selected"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"
            app:strokeColor="#C8E6C9"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Apps Used"
                        android:textColor="#2E7D32"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#1B5E20"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Time"
                        android:textColor="#2E7D32"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26h 15m"
                        android:textColor="#1B5E20"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_app_usage_placeholder_1"/>
                <include layout="@layout/item_app_usage_placeholder_2"/>
                <include layout="@layout/item_app_usage_placeholder_3"/>
                <include layout="@layout/item_app_usage_placeholder_4"/>
                <include layout="@layout/item_app_usage_placeholder_5"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>
