<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    tools:context=".StreakProgressActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Streak Progress" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Main Streak Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#FF7043"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_focus"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="7 Days ðŸ”¥"
                    android:textColor="@android:color/white"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Streak"
                    android:textColor="@android:color/white" />

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/ic_gift"
                    android:text="+100 Bonus Points Earned"
                    android:textColor="@android:color/white"
                    app:strokeColor="@android:color/white" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- This Week -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="This Week"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7/7 days âœ“"
                        android:textColor="@color/button_purple" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Mon" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Tue" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Wed" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Thu" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Fri" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sat" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/streak_card_background"
                            android:padding="8dp"
                            android:src="@drawable/ic_focus"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Sun" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Streak Milestones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Streak Milestones"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 7 Day Streak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#E8F5E9"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/seven_day_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_focus"
                    app:tint="#4CAF50" />

                <TextView
                    android:id="@+id/seven_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/seven_day_icon"
                    android:text="7 Day Streak"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seven_day_title"
                    android:layout_alignStart="@id/seven_day_title"
                    android:text="Unlocked! Points earned" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/points_background"
                    android:drawableStart="@drawable/ic_gift"
                    android:drawablePadding="4dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="+100"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 14 Day Streak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/fourteen_day_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:id="@+id/fourteen_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/fourteen_day_icon"
                    android:text="14 Day Streak"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/fourteen_day_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fourteen_day_title"
                    android:layout_alignStart="@id/fourteen_day_title"
                    android:layout_toStartOf="@+id/fourteen_day_points"
                    android:layout_marginEnd="16dp"
                    android:progress="50" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fourteen_day_progress"
                    android:layout_alignStart="@id/fourteen_day_title"
                    android:text="50% progress"/>

                <TextView
                    android:id="@+id/fourteen_day_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/points_background"
                    android:drawableStart="@drawable/ic_gift"
                    android:drawablePadding="4dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="+250"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 30 Day Streak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/thirty_day_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:id="@+id/thirty_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/thirty_day_icon"
                    android:text="30 Day Streak"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/thirty_day_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/thirty_day_title"
                    android:layout_alignStart="@id/thirty_day_title"
                    android:layout_toStartOf="@+id/thirty_day_points"
                    android:layout_marginEnd="16dp"
                    android:progress="23" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/thirty_day_progress"
                    android:layout_alignStart="@id/thirty_day_title"
                    android:text="23% progress"/>

                <TextView
                    android:id="@+id/thirty_day_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/points_background"
                    android:drawableStart="@drawable/ic_gift"
                    android:drawablePadding="4dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="+500"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 60 Day Streak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/sixty_day_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:id="@+id/sixty_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/sixty_day_icon"
                    android:text="60 Day Streak"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/sixty_day_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sixty_day_title"
                    android:layout_alignStart="@id/sixty_day_title"
                    android:layout_toStartOf="@+id/sixty_day_points"
                    android:layout_marginEnd="16dp"
                    android:progress="12" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sixty_day_progress"
                    android:layout_alignStart="@id/sixty_day_title"
                    android:text="12% progress"/>

                <TextView
                    android:id="@+id/sixty_day_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/points_background"
                    android:drawableStart="@drawable/ic_gift"
                    android:drawablePadding="4dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="+1000"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- 100 Day Streak -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/hundred_day_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lock" />

                <TextView
                    android:id="@+id/hundred_day_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/hundred_day_icon"
                    android:text="100 Day Streak"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/hundred_day_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hundred_day_title"
                    android:layout_alignStart="@id/hundred_day_title"
                    android:layout_toStartOf="@+id/hundred_day_points"
                    android:layout_marginEnd="16dp"
                    android:progress="7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hundred_day_progress"
                    android:layout_alignStart="@id/hundred_day_title"
                    android:text="7% progress"/>

                <TextView
                    android:id="@+id/hundred_day_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/points_background"
                    android:drawableStart="@drawable/ic_gift"
                    android:drawablePadding="4dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="+2000"
                    android:textColor="@android:color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/view_daily_challenges_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/daily_challenges_background"
            android:drawableLeft="@drawable/ic_focus"
            android:text="View Daily Challenges"
            app:tint="@android:color/white"/>

        <Button
            android:id="@+id/btn_track_progress"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawableLeft="@drawable/ic_rewards"
            android:text="Track Progress"
            android:textColor="#FF5722" />

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>